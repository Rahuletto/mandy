{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "macos",
  "description": "Capability for the main window on macOS",
  "windows": [
    "main"
  ],
  "platforms": ["macOS"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:allow-write-text-file",
    "macos-haptics:default"
  ]
}
